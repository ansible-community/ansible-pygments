[html]
directory = .test-results/pytest/cov/
show_contexts = true
skip_covered = false

[paths]
source =
  src/ansible_pygments
  */src/ansible_pygments
  .tox/*/lib/python*/site-packages/ansible_pygments

[report]
skip_covered = true
show_missing = true
exclude_lines =
    \#\s*pragma: no cover
    ^\s*raise AssertionError\b
    ^\s*raise NotImplementedError\b
    ^\s*return NotImplemented\b
    ^\s*raise$
    ^if __name__ == ['"]__main__['"]:$

[run]
branch = true
cover_pylib = false
parallel = true
relative_files = true
source =
  ansible_pygments
  tests
